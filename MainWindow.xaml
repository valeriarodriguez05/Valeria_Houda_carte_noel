<Window x:Class="Valeria_Houda_carte_noel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Carte de Noël"
        Height="450"
        Width="800"
        Background="#1A1A1A"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Image x:Name="DailyImage"
               Stretch="Fill"
               Opacity="0.85"/>

        <Grid>
            <Canvas x:Name="SnowCanvas"
                    IsHitTestVisible="False"
                    Panel.ZIndex="20" 
                    Background="Transparent"/>

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Panel.ZIndex="10">

                <TextBlock x:Name="TB_Title"
                           Text="Joyeux Noël !"
                           FontSize="48"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="TB_Message"
                           Text="La magie de Noël approche..."
                           FontSize="24"
                           Foreground="White"
                           Margin="0,10,0,20"
                           HorizontalAlignment="Center"/>

                <Border Background="#AA000000"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,20,0,0">
                    <TextBlock x:Name="TB_Countdown"
                               Text="00 jours 00:00:00"
                               FontSize="32"
                               Foreground="Gold"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- ⭐ BOUTON CARTE DU JOUR -->
                <Button x:Name="BtnCarteDuJour"
                        Content="Carte du jour"
                        Width="200"
                        Height="50"
                        Margin="0,20,0,0"
                        FontSize="20"
                        HorizontalAlignment="Center"
                      Click="BtnOuvrirCartePage_Click"/>

            </StackPanel>
        </Grid>

        <TextBlock Text="Carte de Noël - Valeria et Houda"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,10"
                   Opacity="0.7"
                   Panel.ZIndex="5"/>

        
        <TextBlock x:Name="CountdownText" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="24" 
                   Margin="0,20,0,0" 
                   Text=""/>
    </Grid>
</Window>
