<Window x:Class="Valeria_Houda_carte_noel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Valeria_Houda_carte_noel"
        mc:Ignorable="d"
        Title="Carte de Noël" Height="450" Width="800" Background="#1A1A1A">
    <Grid>
        <!-- Image de fond qui change chaque jour -->
        <Image x:Name="DailyImage" Stretch="Fill" Opacity="0.85"/>


        <!-- Zone d'affichage du message de Noël -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TB_Title" Text="Joyeux Noël !"
FontSize="48" Foreground="White" FontWeight="Bold"
HorizontalAlignment="Center"/>


            <TextBlock x:Name="TB_Message" Text="La magie de Noël approche..."
FontSize="24" Foreground="White" Margin="0,10,0,20"
HorizontalAlignment="Center"/>


            <!-- Compte à rebours -->
            <Border Background="#AA000000" CornerRadius="10" Padding="20" Margin="0,20,0,0">
                <TextBlock x:Name="TB_Countdown" Text="00 jours 00:00:00"
FontSize="32" Foreground="Gold" FontWeight="SemiBold"
HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>


        <!-- Footer en bas -->
        <TextBlock Text="Carte de Noël automatique - C# WPF" Foreground="White"
HorizontalAlignment="Center" VerticalAlignment="Bottom"
Margin="0,0,0,10" Opacity="0.7"/>
    </Grid>
</Window>
