<Window x:Class="Valeria_Houda_carte_noel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Carte de Noël"
        Height="450"
        Width="800"
        Background="#1A1A1A"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- IMAGE DE FOND QUI CHANGE CHAQUE JOUR -->
        <Image x:Name="DailyImage"
               Stretch="Fill"
               Opacity="0.85"/>

        <!-- EFFETS ET CONTENU AU PREMIER PLAN -->
        <Grid>
            <!-- Neige au-dessus de tout -->
            <Canvas x:Name="SnowCanvas"
                    IsHitTestVisible="False"
                    Panel.ZIndex="20" />

            <!-- Contenu centré -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Panel.ZIndex="10">

                <TextBlock x:Name="TB_Title"
                           Text="Joyeux Noël !"
                           FontSize="48"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="TB_Message"
                           Text="La magie de Noël approche..."
                           FontSize="24"
                           Foreground="White"
                           Margin="0,10,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Compte à rebours -->
                <!-- Compte à rebours -->
                <TextBlock x:Name="CountdownText"
                   Grid.Row="2"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#FFF3E5"
                   HorizontalAlignment="Center"
                   Margin="0,20"/>


            </StackPanel>
        </Grid>

        <!-- FOOTER -->
        <TextBlock Text="Carte de Noël automatique - C# WPF"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,10"
                   Opacity="0.7"
                   Panel.ZIndex="5"/>

    </Grid>
</Window>
