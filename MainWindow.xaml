<Window x:Class="Valeria_Houda_carte_noel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Carte de Noël" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="DarkGreen">

    <Grid Margin="20">

        <!-- 3 lignes  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre -->
            <RowDefinition Height="*"/>
            <!-- Image + neige -->
            <RowDefinition Height="Auto"/>
            <!-- Compte à rebours -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Message -->
        <TextBlock Text="Joyeux Noël !" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="DarkRed"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- Zone image + neige -->
        <Grid Grid.Row="1">
            <Image x:Name="MainImage"
                   Stretch="Uniform"
                   Margin="0,20"/>

            <!-- Neige au-dessus de tout -->
            <Canvas x:Name="SnowCanvas"
                    IsHitTestVisible="False"/>
        </Grid>

        <!-- Compte à rebours -->
        <Border Grid.Row="2"
                Background="#AA000000"
                CornerRadius="10"
                Padding="20"
                Margin="0,20,0,0">
            <TextBlock x:Name="TB_Countdown"
                       Text="00 jours 00:00:00"
                       FontSize="32"
                       Foreground="Gold"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="3"
                   Text="Carte de Noël automatique - C# WPF"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   Opacity="0.7"/>
    </Grid>
</Window>
